<Window x:Class="VrepSimpleTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="V-REP simple test" Height="500" Width="800">
    <Grid Margin="0,1,0,-1">
        <StackPanel HorizontalAlignment="Left" Width="200">
            <Button Click="buttonConnect_Click" Background="OrangeRed" Margin="4" Height="30" x:Name="buttonConnect">Connect</Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Width="200" Margin="0, 36, 0, 0"  x:Name="stackControls">
            <Button Click="buttonGetPos_Click"  Margin="4" x:Name="buttonGetPos">Get position</Button>
            <Button Click="buttonScan_Click" Margin="4" x:Name="buttonScan">Scan</Button>
            <Button Margin="4" Content="Forward" />
            <Button Margin="4" >Backward</Button>
            <Button Margin="4" >Left</Button>
            <Button Margin="4" >Right</Button>
            <Button Margin="4" >Clear canvas</Button>
            <TextBlock x:Name="txtInfo" Margin="4" Text="..."></TextBlock>
        </StackPanel>
        <Grid>
            <Canvas Width="300" Height="300" Background="LightYellow" x:Name="canvScan" />
        </Grid>
    </Grid>
</Window>
